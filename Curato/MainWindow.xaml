<Window x:Class="Curato.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Curato.Views"
        Title="Curato"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        Background="White"
        MouseDown="DragWindow">

    <Grid>
        <!-- Header area for dragging -->
        <Grid Height="80" Background="White" MouseDown="DragWindow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Logo / Title -->
            <TextBlock Text="Curato" VerticalAlignment="Center" Margin="40,0,0,0"
                       FontSize="28" Foreground="#F9B233" FontFamily="Satoshi Bold"/>
        </Grid>

        <!-- Main content frame -->
        <Frame x:Name="MainFrame" Margin="0,80,0,0" NavigationUIVisibility="Hidden" x:FieldModifier="public"/>
    </Grid>
</Window>
