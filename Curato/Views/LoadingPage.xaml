<UserControl x:Class="EdgeAITravelPlanner.Views.LoadingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="/Resources/Icons/logo.png" Width="120" Height="120" Margin="0,0,0,20"/>
            <TextBlock Text="Loading..." FontSize="20" Foreground="Gray" HorizontalAlignment="Center"/>
            <ProgressBar Width="200" Height="10" Margin="0,20,0,0" IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</UserControl>
