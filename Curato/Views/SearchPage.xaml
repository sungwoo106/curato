<UserControl x:Class="Curato.Views.SearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080">

    <UserControl.Resources>
    <Style x:Key="TimeChipStyle" TargetType="Button">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="Button">
            <Border 
                Background="{TemplateBinding Background}" 
                CornerRadius="30" 
                Padding="20,10">
                <ContentPresenter 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"/>
            </Border>
            </ControlTemplate>
        </Setter.Value>
        </Setter>
        <Style.Triggers>
        <!-- permanent “selected” accent -->
        <DataTrigger Binding="{Binding TimeSelected}" Value="True">
            <Setter Property="Background" Value="#FFB31A"/>
            <Setter Property="Foreground" Value="White"/>
        </DataTrigger>
        <!-- hover feedback -->
        <Trigger Property="IsMouseOver" Value="True">
            <Setter Property="Background" Value="#FFF2CC"/>
        </Trigger>
        <!-- pressed feedback -->
        <Trigger Property="IsPressed" Value="True">
            <Setter Property="Background" Value="#FFB31A"/>
            <Setter Property="Foreground" Value="White"/>
        </Trigger>
        </Style.Triggers>
    </Style>
    </UserControl.Resources>


    <Viewbox Stretch="Fill">
        <Grid Width="1920" Height="1080" Background="#FAFAFA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Background="White" Height="80" Grid.Row="0">
                <TextBlock Text="Curato" VerticalAlignment="Center" Margin="40,-10,0,0"
                           FontSize="46" Foreground="#FFB31A"
                           FontFamily="{StaticResource SatoshiBold}"/>
            </Grid>

            <!-- Search Bar -->
            <Border
                Background="White"
                Padding="40,20"
                Grid.Row="1"
                BorderBrush="#EEEEEE"
                BorderThickness="0">
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" LastChildFill="False" Margin="0,10">

                    <!-- Search box -->
                    <Border Background="White" CornerRadius="40" Padding="15,10" Margin="0,0,20,0" Height="97" Width="494"
                            BorderBrush="#E0E0E0" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.13" BlurRadius="20" ShadowDepth="2"/>
                        </Border.Effect>
                        <DockPanel>
                            <Image Source="/Resources/Icons/search.png" Width="33" Height="32" Margin="0,0,10,0"/>
                            <TextBox FontSize="24" BorderThickness="0" Background="Transparent" Foreground="#575757"
                                     FontFamily="{StaticResource SatoshiMedium}" VerticalAlignment="Center"
                                     Text="Search Location"/>
                        </DockPanel>
                    </Border>

                    <!-- Preferences -->
                    <Border Background="White" CornerRadius="40" Padding="10" Margin="0,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.13" BlurRadius="20" ShadowDepth="1"/>
                        </Border.Effect>
                        <UniformGrid Columns="5" HorizontalAlignment="Left" VerticalAlignment="Center" Height="97" Width="1250">
                            <!-- Companion Button -->
                            <Button x:Name="CompanionButton" Content="{Binding CompanionButtonText}" Click="CompanionButton_Click"
                                    FontSize="24" FontFamily="{StaticResource SatoshiMedium}" Height="67" Width="202" Margin="0,0,10,0" BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="30" Padding="20,10">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CompanionSelected}" Value="True">
                                                <Setter Property="Background" Value="#FFB31A"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                            <!-- hover feedback -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFF2CC"/>
                                            </Trigger>
                                            <!-- pressed feedback -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FFB31A"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Popup x:Name="CompanionPopup"
                                PlacementTarget="{Binding ElementName=CompanionButton}"
                                Placement="Bottom"
                                StaysOpen="False"
                                AllowsTransparency="True"
                                PopupAnimation="Slide"
                                Width="192"
                                MinHeight="230">
                                <Border Background="White" CornerRadius="50" Padding="12" Effect="{DynamicResource ShadowEffect}">
                                    <ItemsControl x:Name="CompanionItemsControl"/>
                                </Border>
                            </Popup>

                            <!-- Budget Button -->
                            <Button x:Name="BudgetButton"
                                    Content="{Binding BudgetButtonText}"
                                    Click="BudgetButton_Click"
                                    FontSize="24" 
                                    FontFamily="{StaticResource SatoshiMedium}" 
                                    Height="67" 
                                    Width="158" 
                                    Margin="0,0,10,0" 
                                    BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="30" Padding="20,10">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding BudgetSelected}" Value="True">
                                                <Setter Property="Background" Value="#FFB31A"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                                                                        <!-- hover feedback -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFF2CC"/>
                                            </Trigger>
                                            <!-- pressed feedback -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FFB31A"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>        
                            <Popup x:Name="BudgetPopup"
                                PlacementTarget="{Binding ElementName=BudgetButton}"
                                Placement="Bottom"
                                StaysOpen="False"
                                AllowsTransparency="True"
                                PopupAnimation="Slide"
                                Width="192"
                                MinHeight="210">
                                <Border Background="White" Padding="12" Effect="{DynamicResource ShadowEffect}" CornerRadius="50" BorderBrush="#DDD" BorderThickness="1">
                                    <ItemsControl x:Name="BudgetItemsControl" />
                                </Border>
                            </Popup>

                            <!-- Time Button -->
                            <Button x:Name="TimeButton"
                                    Content="{Binding TimeButtonText}"
                                    Click="BudgetButton_Click"
                                    FontSize="24" 
                                    FontFamily="{StaticResource SatoshiMedium}" 
                                    Height="67" 
                                    Width="131" 
                                    Margin="0,0,10,0" 
                                    BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="30" Padding="20,10">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TimeSelected}" Value="True">
                                                <Setter Property="Background" Value="#FFB31A"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                            <!-- hover feedback -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFF2CC"/>
                                            </Trigger>
                                            <!-- pressed feedback -->
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FFB31A"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Popup
                            x:Name="TimePopup"
                            PlacementTarget="{Binding ElementName=TimeButton}"
                            Placement="Bottom"
                            StaysOpen="False"
                            AllowsTransparency="True"
                            PopupAnimation="Slide"
                            MinWidth="890"
                            MinHeight="97">
                            <Border
                                Background="White"
                                Padding="12"
                                CornerRadius="40"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                Effect="{DynamicResource ShadowEffect}">
                                <StackPanel>
                                <!-- Main periods row -->
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl x:Name="TimeMainItemsControl">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>

                                <!-- Sub-slots row -->
                                <ScrollViewer
                                    x:Name="TimeSubScroll"
                                    HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled"
                                    Visibility="Collapsed"
                                    Margin="0,10,0,0"
                                    MaxHeight="360">
                                    <ItemsControl x:Name="TimeSubItemsControl">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                        <!-- stack vertically so items “drop down” -->
                                        <StackPanel Orientation="Vertical"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                                </StackPanel>
                            </Border>
                            </Popup>
                            <Border Background="White" CornerRadius="40" Padding="20,10" Margin="0,0,10,0" Height="67" Width="177"
                                    BorderBrush="#E0E0E0" BorderThickness="0">
                                <TextBlock Text="Category" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontFamily="{StaticResource SatoshiMedium}"/>
                            </Border>
                            <Border Background="#FFB31A" CornerRadius="100" Height="67" Width="67" Margin="40,0,0,0"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Source="/Resources/Icons/arrow.png" Width="32.25" Height="25.91"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </UniformGrid>
                    </Border>

                </DockPanel>
            </Border>

            <!-- Recommendations -->
            <StackPanel Grid.Row="2" Margin="120,40,120,0">
                <TextBlock Text="Popular places around Seoul" FontSize="34" Margin="0,0,20,50"
                           FontFamily="{StaticResource SatoshiBold}"/>
                <ItemsControl ItemsSource="{Binding PopularPlaces}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Left" ItemWidth="323"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="323" Height="Auto" Background="White" CornerRadius="20" Margin="10" Padding="10">
                                <StackPanel VerticalAlignment="Top">
                                    <Grid>
                                        <Border CornerRadius="40" ClipToBounds="True" Width="318" Height="350">
                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill" StretchDirection="Both" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality" />
                                        </Border>
                                        <Border Background="#CCFFFFFF" Padding="6,2" CornerRadius="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="13,13,0,0">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.4" />
                                            </Border.Effect>
                                            <TextBlock Text="{Binding Label}" FontSize="16"
                                                       FontFamily="{StaticResource SatoshiBold}" Foreground="#CC000000"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock Text="{Binding Title}" FontSize="22" Margin="0,10,0,0"
                                               FontFamily="{StaticResource SatoshiBold}"/>
                                    <TextBlock Text="{Binding Subtitle}" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,10"
                                               Foreground="#777777" FontFamily="{StaticResource SatoshiMedium}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Viewbox>
</UserControl>
