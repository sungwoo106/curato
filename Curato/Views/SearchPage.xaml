<UserControl x:Class="Curato.Views.SearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080">

    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header -->
            <RowDefinition Height="Auto" /> <!-- Search Bar -->
            <RowDefinition Height="*" />    <!-- Recommendations -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" Padding="40,30" Grid.Row="0">
            <TextBlock Text="Curato" FontSize="46" FontWeight="Bold" Foreground="#F9B233" FontFamily="{StaticResource SatoshiBold}" />
        </Border>

        <!-- Search Controls -->
        <Border Background="White" Padding="40,20" Grid.Row="1" BorderBrush="#EEEEEE" BorderThickness="0,1,0,1">
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" LastChildFill="False" Margin="0,10">

                <!-- Location Search Box -->
                <Border Background="White" CornerRadius="30" Padding="15,10" Margin="0,0,20,0" Height="97" Width="494" 
                        BorderBrush="#E0E0E0" BorderThickness="1" Effect="{DynamicResource ShadowEffect}">
                    <DockPanel>
                        <Image Source="/Resources/Icons/search.png" Width="32" Height="32" Margin="0,0,10,0" />
                        <TextBox FontSize="24" BorderThickness="0" Background="Transparent" Foreground="#444" FontFamily="{StaticResource SatoshiMedium}"
                                 VerticalAlignment="Center" Text="Search Location" />
                    </DockPanel>
                </Border>

                <!-- Preference Buttons -->
                <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0" Height="67" Width="202"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <TextBlock FontSize="24" Text="Companion" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource SatoshiMedium}" />
                </Border>
                <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0" Height="67" Width="155"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <TextBlock FontSize="24" Text="Budget" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource SatoshiMedium}" />
                </Border>
                <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0" Height="67" Width="131"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <TextBlock FontSize="24" Text="Time" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource SatoshiMedium}" />
                </Border>
                <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0" Height="67" Width="177"
                        BorderBrush="#E0E0E0" BorderThickness="1">
                    <TextBlock FontSize="24" Text="Category" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="{StaticResource SatoshiMedium}" />
                </Border>

                <!-- Generate Button -->
                <Border Background="#FFB31A" CornerRadius="30" Height="67" Width="67" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Resources/Icons/arrow.png" Width="32.25" Height="25.91" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

            </DockPanel>
        </Border>

        <!-- Recommendations -->
        <StackPanel Grid.Row="2" Margin="40,30">
            <TextBlock Text="Popular places around Seoul" FontSize="34" Margin="0,0,0,20" FontFamily="{StaticResource SatoshiBold}" />
            <ItemsControl ItemsSource="{Binding PopularPlaces}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   ItemHeight="463"
                                   ItemWidth="323"
                                   HorizontalAlignment="Left" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="323" Height="463" Background="White" CornerRadius="20" Margin="10" Padding="10">
                            <StackPanel>
                                <Grid>
                                    <Border CornerRadius="15" ClipToBounds="True" Width="318" Height="380">
                                        <Image Source="{Binding ImagePath}" Stretch="UniformToFill" />
                                    </Border>
                                    <Border Background="#33FFFFFF" Padding="6,2"
                                            CornerRadius="10" HorizontalAlignment="Left"
                                            VerticalAlignment="Top" Margin="8,8,0,0">
                                        <TextBlock Text="{Binding Type}" FontSize="16" Foreground="#CC000000" FontFamily="{StaticResource SatoshiBold}" />
                                    </Border>
                                </Grid>
                                <TextBlock Text="{Binding Title}" FontSize="22" Margin="0,10,0,0" FontFamily="{StaticResource SatoshiBold}" />
                                <TextBlock Text="{Binding Subtitle}" FontSize="16" TextWrapping="Wrap" Foreground="#555" FontFamily="{StaticResource SatoshiMedium}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
