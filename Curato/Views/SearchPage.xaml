<UserControl x:Class="Curato.Views.SearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080">

    <Viewbox Stretch="Fill">
        <Grid Width="1920" Height="1080" Background="#FAFAFA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Background="White" Height="100" Grid.Row="0">
                <TextBlock Text="Curato" VerticalAlignment="Center" Margin="40,0,0,0"
                           FontSize="28" Foreground="#F9B233"
                           FontFamily="{StaticResource SatoshiBold}"/>
            </Grid>

            <!-- Search Bar -->
            <Border Background="White" Padding="40,20" Grid.Row="1" BorderBrush="#EEEEEE" BorderThickness="0,1,0,1">
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" LastChildFill="False" Margin="0,10">

                    <!-- Search box -->
                    <Border Background="White" CornerRadius="30" Padding="15,10" Margin="0,0,20,0" Height="50" Width="300"
                            BorderBrush="#E0E0E0" BorderThickness="1">
                        <DockPanel>
                            <Image Source="/Resources/Icons/search.png" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBox FontSize="14" BorderThickness="0" Background="Transparent" Foreground="#444"
                                     FontFamily="{StaticResource SatoshiMedium}" VerticalAlignment="Center"
                                     Text="Search Location"/>
                        </DockPanel>
                    </Border>

                    <!-- Preferences -->
                    <UniformGrid Columns="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock Text="Companion" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontFamily="{StaticResource SatoshiMedium}"/>
                        </Border>
                        <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock Text="Budget" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontFamily="{StaticResource SatoshiMedium}"/>
                        </Border>
                        <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock Text="Time" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontFamily="{StaticResource SatoshiMedium}"/>
                        </Border>
                        <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock Text="Category" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontFamily="{StaticResource SatoshiMedium}"/>
                        </Border>
                    </UniformGrid>

                    <!-- Generate button -->
                    <Border Background="#F9B233" CornerRadius="30" Height="50" Width="50" Margin="20,0,0,0"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resources/Icons/arrow.png" Width="20" Height="20"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </DockPanel>
            </Border>

            <!-- Recommendations -->
            <StackPanel Grid.Row="2" Margin="40,30">
                <TextBlock Text="Popular places around Seoul" FontSize="20"
                           FontFamily="{StaticResource SatoshiBold}" Margin="0,0,0,20"/>
                <ItemsControl ItemsSource="{Binding PopularPlaces}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="200" Height="250" Background="White" CornerRadius="20" Margin="10" Padding="10">
                                <StackPanel>
                                    <Grid>
                                        <Border CornerRadius="15" ClipToBounds="True" Width="180" Height="120">
                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill"/>
                                        </Border>
                                        <Border Background="#E0E0E0" Padding="6,2" CornerRadius="10" HorizontalAlignment="Left" Margin="8,8,0,0">
                                            <TextBlock Text="{Binding Label}" FontSize="10"
                                                       FontFamily="{StaticResource SatoshiMedium}" Foreground="#AA000000"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock Text="{Binding Title}" FontSize="14" Margin="0,10,0,0"
                                               FontFamily="{StaticResource SatoshiBold}"/>
                                    <TextBlock Text="{Binding Subtitle}" FontSize="12" TextWrapping="Wrap"
                                               Foreground="#555" FontFamily="{StaticResource SatoshiMedium}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Viewbox>
</UserControl>
