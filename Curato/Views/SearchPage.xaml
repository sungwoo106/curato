<UserControl x:Class="Curato.Views.SearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080">

    <Viewbox Stretch="Fill">
        <Grid Width="1920" Height="1080" Background="#FAFAFA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Background="White" Height="100" Grid.Row="0">
                <TextBlock Text="Curato" VerticalAlignment="Center" Margin="40,0,0,0"
                           FontSize="46" Foreground="#FFB31A"
                           FontFamily="{StaticResource SatoshiBold}"/>
            </Grid>

            <!-- Search Bar -->
            <Border Background="White" Padding="40,20" Grid.Row="1" BorderBrush="#EEEEEE" BorderThickness="0,1,0,1">
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" LastChildFill="False" Margin="0,10">

                    <!-- Search box -->
                    <Border Background="White" CornerRadius="30" Padding="15,10" Margin="0,0,20,0" Height="97" Width="494"
                            BorderBrush="#E0E0E0" BorderThickness="1">
                        <DockPanel>
                            <Image Source="/Resources/Icons/search.png" Width="33" Height="32" Margin="0,0,10,0"/>
                            <TextBox FontSize="24" BorderThickness="0" Background="Transparent" Foreground="#575757"
                                     FontFamily="{StaticResource SatoshiMedium}" VerticalAlignment="Center"
                                     Text="Search Location"/>
                        </DockPanel>
                    </Border>

                    <!-- Preferences -->
                    <UniformGrid Columns="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,20,0" Height="97">
                        <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock Text="Companion" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontFamily="{StaticResource SatoshiMedium}"/>
                        </Border>
                        <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock Text="Budget" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontFamily="{StaticResource SatoshiMedium}"/>
                        </Border>
                        <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock Text="Time" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontFamily="{StaticResource SatoshiMedium}"/>
                        </Border>
                        <Border Background="White" CornerRadius="30" Padding="20,10" Margin="0,0,10,0"
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock Text="Category" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontFamily="{StaticResource SatoshiMedium}"/>
                        </Border>
                    </UniformGrid>

                    <!-- Generate button -->
                    <Border Background="#FFB31A" CornerRadius="30" Height="67" Width="67" Margin="20,0,0,0"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Resources/Icons/arrow.png" Width="32.25" Height="25.91"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </DockPanel>
            </Border>

            <!-- Recommendations -->
            <StackPanel Grid.Row="2" Margin="40,30">
                <TextBlock Text="Popular places around Seoul" FontSize="34"
                           FontFamily="{StaticResource SatoshiBold}" Margin="0,0,0,20"/>
                <ItemsControl ItemsSource="{Binding PopularPlaces}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="323" Height="463" Background="White" CornerRadius="20" Margin="10" Padding="10">
                                <StackPanel>
                                    <Grid>
                                        <Border CornerRadius="15" ClipToBounds="True" Width="180" Height="120">
                                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill"/>
                                        </Border>
                                        <Border Background="#80FFFFFF" Padding="6,2" CornerRadius="10" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,8,0,0">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.4" />
                                            </Border.Effect>
                                            <TextBlock Text="{Binding Label}" FontSize="16"
                                                       FontFamily="{StaticResource SatoshiBold}" Foreground="#CC000000"/>
                                        </Border>
                                    </Grid>
                                    <TextBlock Text="{Binding Title}" FontSize="22" Margin="0,10,0,0"
                                               FontFamily="{StaticResource SatoshiBold}"/>
                                    <TextBlock Text="{Binding Subtitle}" FontSize="16" TextWrapping="Wrap"
                                               Foreground="#777777" FontFamily="{StaticResource SatoshiMedium}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Viewbox>
</UserControl>
