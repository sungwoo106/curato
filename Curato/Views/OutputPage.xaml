<UserControl x:Class="Curato.Views.OutputPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Curato.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Background="White" Height="80" Grid.Row="0">
            <TextBlock Text="Curato" VerticalAlignment="Center" Margin="40,-10,0,0"
                       FontSize="46" Foreground="#FFB31A"
                       FontFamily="{StaticResource SatoshiBold}"/>
        </Grid>

        <!-- User Options Summary Box -->
        <Border Grid.Row="1"
                Background="#FFF2CC"
                CornerRadius="16"
                Margin="30,30,30,15"
                Padding="20"
                BorderBrush="#FFD699"
                BorderThickness="1">
            <DockPanel LastChildFill="False">
                <!-- Left: Options Summary -->
                <StackPanel Orientation="Vertical" DockPanel.Dock="Left" Width="Auto">
                    <TextBlock Text="{Binding LocationQuery, StringFormat={}{0}}"
                               FontSize="20" FontFamily="{StaticResource SatoshiMedium}" Foreground="Black"/>
                    <Separator Margin="0,8"/>
                    <TextBlock Text="{Binding SelectedCompanion, StringFormat={}{0}}"
                               FontSize="20" FontFamily="{StaticResource SatoshiMedium}" Foreground="Black"/>
                    <Separator Margin="0,8"/>
                    <TextBlock Text="{Binding SelectedBudget, StringFormat={}{0}}"
                               FontSize="20" FontFamily="{StaticResource SatoshiMedium}" Foreground="Black"/>
                    <Separator Margin="0,8"/>
                    <TextBlock Text="{Binding SelectedMainTime, StringFormat={}{0}}"
                               FontSize="20" FontFamily="{StaticResource SatoshiMedium}" Foreground="Black"/>
                    <Separator Margin="0,8"/>
                    <TextBlock Text="{Binding SelectedCategoriesText, StringFormat={}{0}}"
                               FontSize="20" FontFamily="{StaticResource SatoshiMedium}" Foreground="Black"/>
                </StackPanel>

                <!-- Right: Edit Button -->
                <Button Content="Edit"
                        FontSize="18"
                        FontFamily="{StaticResource SatoshiMedium}"
                        Padding="12,6"
                        Margin="40,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="EditButton_Click"
                        Background="#FFB31A"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Width="100"
                        Height="40"
                        DockPanel.Dock="Right"
                        />
            </DockPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

        <!-- WebView Map -->
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <TextBlock Text="[Map will be displayed here via WebView2]" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
        </Border>

        <!-- Emotional Itinerary -->
        <ScrollViewer Grid.Column="1" Margin="20">
            <TextBlock TextWrapping="Wrap" FontSize="16">
                피치가 낮은 카페에서 하루를 시작해보세요.
                주변의 구경을 다루며 스타벅스한 모험을 시작하고,
                사람들과 함께 마지막에는 달력적인 여행을 만들어보세요.
            </TextBlock>
        </ScrollViewer>
            </Grid>
    </Grid>
</UserControl>
