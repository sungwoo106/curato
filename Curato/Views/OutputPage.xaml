<UserControl x:Class="Curato.Views.OutputPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Curato.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Background="White">

    <UserControl.Resources>
        <Style x:Key="PillChipStyle" TargetType="Label">
            <Setter Property="Background" Value="#FFB31A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource SatoshiMedium}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar (white, shadowed) -->
        <Border Grid.Row="0"
                Background="White"
                Padding="30,20"
                SnapsToDevicePixels="True"
                MinHeight="230">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="4" Opacity="0.08"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- Logo -->
                <TextBlock Grid.Column="0"
                           Text="Curato"
                           FontSize="46"
                           FontFamily="{StaticResource SatoshiBold}"
                           Height="80"
                           Foreground="#FFB31A"
                           VerticalAlignment="Center"
                           Margin="40,-10,0,0"/>

                <!-- Preferences -->
                <Border Grid.Column="1"
                        Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        CornerRadius="40"
                        Padding="14,6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MinWidth="1100"
                        Height="75"
                        Margin="30,0">
                    <TextBlock Text="{Binding PreferencesSummary}"
                               FontSize="20"
                               FontFamily="{StaticResource SatoshiMedium}"
                               HorizontalAlignment="Center"
                               VerticalAlighment="Center"/>
                </Border>

                <!-- Edit Plan Button -->
                <Button Grid.Column="2" Content="Edit Plan"
                        FontSize="18"
                        FontFamily="{StaticResource SatoshiMedium}"
                        Padding="12,6"
                        MinWidth="170"
                        Height="75"
                        Margin="-80,0,0,0"
                        Click="EditButton_Click"
                        Cursor="Hand"
                        Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="BorderBrush" Value="#DDD"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="30">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Margin="10,2"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF2CC"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FFD699"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="30,30,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- WebView Map -->
            <Border Grid.Column="0" Background="Gray" CornerRadius="16" Margin="0,0,10,0">
                <TextBlock Text="[Map will be displayed here via WebView2]" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Foreground="Gray"/>
            </Border>

            <!-- Emotional Itinerary -->
            <ScrollViewer Grid.Column="1" Margin="20">
                <StackPanel>
                    <Border Padding="20">
                        <TextBlock TextWrapping="Wrap" FontSize="16" FontFamily="{StaticResource SatoshiMedium}">
                            피치가 낮은 카페에서 하루를 시작해보세요.
                            주변의 구경을 다루며 스타벅스한 모험을 시작하고,
                            사람들과 함께 마지막에는 달력적인 여행을 만들어보세요.
                        </TextBlock>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
